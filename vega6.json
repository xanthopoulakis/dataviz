{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 600,
  "height": 600,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xanthopoulakis/dataviz/master/thessaloniki.topojson",
        "format": {
          "type": "topojson",
          "feature": "collection"
        }
      },
      "projection": {
        "type": "mercator",
        "rotate": [0,-110,0]

      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xanthopoulakis/dataviz/master/housing.json"
      },
      "transform": [
        {
          "filter":{
            "field": "longitude", "range": [
              22.91, 22.99
            ]
          }
        },
        {
          "filter":{
            "field": "latitude", "range": [
              40.59, 40.65
            ]
          }
        }
      ],
      "projection": {
        "type": "mercator",
        "rotate": [0,-110,0]
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 10},
        "color": {"field": "type", "scale": "ordinal", "type": "nominal"}
      }
    }
  ]
}